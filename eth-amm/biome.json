{
  "$schema": "https://biomejs.dev/schemas/2.3.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "include": ["**", "!**/node_modules", "!**/eth-amm/lib"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "tab",
    "formatWithErrors": false,
    "indentWidth": 2,
    "lineWidth": 120
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single",
      "trailingCommas": "all",
      "jsxQuoteStyle": "single"
    }
  },
  "assists": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
